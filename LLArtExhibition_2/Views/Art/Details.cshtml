@model ArtShow
@{
    ViewBag.Title = "作品展示";
}
<form methon="post">
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <img src="@Model.CoverUrl" alt="@Model.Title" height:300px width:300px />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Title">作品</label>
        <div class="col-sm-10">
            <input readonly class="form-control-plaintext" asp-for="Title" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Author">作者</label>
        <div class="col-sm-10">
            <input readonly class="form-control-plaintext" asp-for="Author" />

        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="ReleaseDate">发布时间</label>
        <div class="col-sm-10">
            <input readonly class="form-control-plaintext" asp-for="ReleaseDate" />

        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="CoverUrl">作品地址</label>
        <div class="col-sm-10">
            <input readonly class="form-control-plaintext" asp-for="CoverUrl" />

        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-secondary">return</a>
        </div>
    </div>
</form>
