@model ArtShow


    <div class="card" style="width: 100%; ">
        <img src="@Model.CoverUrl" alt="@Model.Title" />
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">
                by @Model.Author @@ @Model.ReleaseDate.ToString("yyyy-MM-dd")
            </p>
            <a asp-action="Details" asp-route-Id="@Model.Id" class="btn btn-secondary">Details</a>
            <a asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-route-Id="@Model.Id" class="btn btn-danger">Deleta</a>
        </div>
    </div>

