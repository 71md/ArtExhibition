@model LoginViewModel

<form asp-action="Login" asp-controller="Example" method="post">
    <h1 style=" margin-top: 5px; ">Log in</h1>
    <h4 style=" margin-top: 5px; margin-bottom:10px;">Use a local account to log in.</h4>
    <div class="form-group row">
        <label style=" margin-bottom:5px;" asp-for="UserName">UserName</label>
        <div class="col-sm-10">
            <input style="font-size:25px; margin-bottom:10px;" asp-for="UserName" />
        </div>
        <span  asp-validation-for="UserName"></span>
    </div>
    <div class="form-group row">
        <label style=" margin-bottom:5px;" asp-for="Password">Password</label>
        <div class="col-sm-10">
            <input style="font-size:25px;  margin-bottom:10px;" asp-for="Password" />
        </div>
        <span  asp-validation-for="Password"></span>
    </div>
    <div  class="form-group row">
        <div class="col-sm-12">
            <input class="btn btn-primary" type="submit" value="login" />
            <a asp-action="Register" class="btn btn-secondary">go register</a>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
</form>